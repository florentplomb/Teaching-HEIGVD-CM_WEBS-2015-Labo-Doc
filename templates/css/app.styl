
html
	position relative
	min-height 100%

body
	padding 0
	margin-bottom 60px
	background-image url(../../img/4.jpg)
	background-attachment fixed
	background-repeat no-repeat

#hometext
	color:#fff

a:hover
	text-decoration underline

h1
	font-family 'neuropol'
	color white
	font-size 3.5em

h2
	font-family 'neuropol'
	color white
	font-size 2.5em

img[alt=raml]
	display block
	width 350px

img[alt=springboot]
	float left
	width 150px

img[alt=springdb]
	display block
	margin-left auto
	margin-right auto
	width 450px

img[alt=heroku]
	display block
	width 200px

img[alt=nodejs]
	float right
	width 150px

img[alt=addIssue]
	display block
	width 150px
img[alt=Detail]
	display block
	width 150px

img[alt=DescIssue]
	display block
	width 150px

img[alt=nodejsExplication]
	display block
	margin-left auto
	margin-right auto
	width 500px


p
	line-height 24px
	margin-bottom 17px

table
	margin-bottom 15px

th, td
	border 1px dotted #ccc
	padding 5px 15px


th
	background-color #eee

div > p > img
	width 100%

.article
	background-color #fff
	opacity 0.9

.titre
	color black

.nav.subnav li
	&.active a
		border-left 3px solid #428bca
		margin-left -3px
	a
		padding 5px 5px

.nav > li > a > .glyphicon
	font-size 12px
	margin-left 6px


@media(max-width: 768px)
	.row .private
		margin-left 0
		padding-left 15px
		padding-top 40px
		.private--vertical-bar
			width 100%
			height 30px




/* expanded rows in the resource panels */
.list-group
	span
		p
			margin-bottom 0px
			margin-top 5px


/* footer of the resource panels */
.panel-footer
	padding 0px 20px 0px 0px
	text-align right
	a
		display block
		text-align right
		color #ADA9A9

/* styling for the private blog posts */
.panel-warning
	.panel-footer
		background-color #fcf8e3

span.glyphicon.glyphicon-lock
	color #555
	margin-right: 10px;

.private
	border solid 1px #999
	border-radius 3px
	margin 10px 0px 10px -45px
	padding 10px 10px 10px 45px
	position relative
	.glyphicon
		margin-left 7px
		margin-top 7px

.private--vertical-bar
	background-color #e7e7e7
	border-top-left-radius 3px
	border-bottom-left-radius 3px
	position absolute
	left 0
	top 0
	bottom 0
	width 30px


.footer
	position absolute
	bottom 0
	width 100%
	height 65px
	padding-top 6px

	background-color #f8f8f8
	border-top 1px solid #e7e7e7

	text-align center
	p
		margin 0
		color #606060
		line-height 1.2
